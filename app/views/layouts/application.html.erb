<!DOCTYPE html>
<html>
<head>
  <title>Tumlink</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	


  <div class="navbar ">
    <div class="navbar-inner navbar-fixed-top">
      <a class="brand" href="">Tumlink</a>
      <ul class="nav">
        <li><%= link_to "Feed", feed_path %></li>
        <!-- <li class="active"><a href="#">Feed</a></li>
        <li><a href="#">Profile</a></li>
        <li><a href="#">Settings</a></li> -->
      </ul>

  <ul class="nav pull-right">
    <li class="dropdown">
      <% if user_signed_in? %>
        <li><%= link_to current_user.full_name, edit_user_registration_path, class: "dropdown-toggle" %></li>
        <li><%= link_to "Log Out", logout_path, class: "dropdown-toggle" %></li>
      <% else %>
        <li><%= link_to "Register", register_path %></li>
        <li><%= link_to "Log In", new_user_session_path %></li>    
      <% end %>
    </li>
  </ul>

    </div>
  </div>


  <div class="container">	

    <% flash.each do |type, message| %>
      <div class="alert <%= flash_class type %>">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <div class="notice"><h4><%= message %></h4></div>
      </div>
    <% end %>

  	<%= yield %>
  </div>
	

</body>
</html>